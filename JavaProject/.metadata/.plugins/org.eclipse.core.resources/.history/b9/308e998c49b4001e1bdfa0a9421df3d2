package day0116;

import java.util.Scanner;

class SawonOuter1{
	
	private String sawonName;
	private int gibonPay, familySu, timeSu;
	
	public void process() {
		InputInner1 input=new InputInner1();
		input.inputData();
		
		SudangInner1 sudang=new SudangInner1();
		sudang.write();
	}
	
	class InputInner1{
		
		public void inputData() {
			Scanner sc=new Scanner(System.in);
			System.out.println("사원명?");
			sawonName=sc.nextLine();
			System.out.println("기본급?");
			gibonPay=sc.nextInt();
			System.out.println("초과시간?");
			timeSu=sc.nextInt();
			System.out.println("가족수?");
			familySu=sc.nextInt();
		}
	}
	class SudangInner1{
		public int getTimeSudang() {
			return timeSu*30000;
		}
		public int getFamilySudang() {
			if(familySu<=4)
				return 200000;
			else
				return 300000;
		}
		public int getTex() {
			return (int)(gibonPay*0.03);
		}
		public int getTotalPay() {
			return gibonPay+getFamilySudang()+getTimeSudang()-getTex();
		}
		public void write() {
			System.out.println("사원명\t기본급\t초과근무\t가족수\t시간수당\t가족수당\t세금\t총급여");
			System.out.println(sawonName+"\t"+gibonPay+"\t"+timeSu+"\t"+familySu+"\t"+getTimeSudang()+"\t"+getFamilySudang()+"\t"+getTex()+"\t"+getTotalPay());
		}
	}
}
public class Practice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		SawonOuter1 sawon=new SawonOuter1();
		sawon.process();
	}

}
