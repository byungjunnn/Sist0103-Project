package day0111;

class Shop{
	private String sangpum;
	private int price;
	private String sangColor;
	
	public Shop(String s, int p, String c) {
		sangpum=s;
		price=p;
		sangColor=c;
	}
	
	//제목
	public static void showTitle() {
		System.out.println("상품명\t가격\t색상");
		System.out.println("=========================");
	}
	//생성한 갯수만큼 출력 메서드
	public void showShop() {
		System.out.println(sangpum+"\t"+price+"원\t"+sangColor);
	}
}
public class ArrObTest_11 {

	public static void main(String[] args) {
		// 4개 생성해서 출력
		Shop[] shop = {
				new Shop("이민호", "010-111-2222", 88),
				new Shop("이영자", "010-888-9999", 77),
				new Shop("김민정", "010-777-8888", 98),
				new Shop("김민정", "010-777-8888", 98)
		};
		
	}

}
